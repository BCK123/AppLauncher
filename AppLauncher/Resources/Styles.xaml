<!--资源字典-->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 1. 顶部提示文本样式：居中对齐 + 基础排版 -->
    <Style x:Key="TopTipTextStyle" TargetType="TextBlock">
        <!-- 核心：居中对齐 -->
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <!-- 基础样式 -->
        <Setter Property="Padding" Value="8"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#2D3748"/>
    </Style>

    <!-- 2. 顶部设置按钮样式：靠右对齐 + 基础排版 + 交互效果 -->
    <Style x:Key="TopSettingsButtonStyle" TargetType="Button">
        <!-- 核心：靠右对齐 -->
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        
        <!-- 基础样式 -->
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Background" Value="#4A6CF7"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <!--<Setter Property="CornerRadius" Value="6"/>-->
        <!-- 交互效果（hover变色） -->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#3A5CF0"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>